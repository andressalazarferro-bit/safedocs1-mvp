<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">
  <Id>12345678-1234-1234-1234-123456789012</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>SafeDocs MVP</ProviderName>
  <DefaultLocale>es-ES</DefaultLocale>
  <DisplayName DefaultValue="SafeDocs MVP - Control de Envío"/>
  <Description DefaultValue="Confirmación antes de enviar correos electrónicos"/>
  <IconUrl DefaultValue="https://andressalazarferro-bit.github.io/safedocs1-mvp/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://andressalazarferro-bit.github.io/safedocs1-mvp/icon-64.png"/>
  <SupportUrl DefaultValue="https://andressalazarferro-bit.github.io/safedocs1-mvp/"/>
  
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.10"/>
    </Sets>
  </Requirements>
  
  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://andressalazarferro-bit.github.io/safedocs1-mvp/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <Permissions>ReadWriteItem</Permissions>
  
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <Sets DefaultMinVersion="1.10">
        <Set Name="Mailbox"/>
      </Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        <LaunchEvents>
          <LaunchEvent Type="OnMessageSend" FunctionName="onMessageSendHandler"/>
        </LaunchEvents>
        
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
        </DesktopFormFactor>
        
        <Resources>
          <bt:Urls>
            <bt:Url id="Commands.Url" DefaultValue="https://andressalazarferro-bit.github.io/safedocs1-mvp/commands.js"/>
          </bt:Urls>
        </Resources>
      </Host>
    </Hosts>
  </VersionOverrides>
</OfficeApp>
